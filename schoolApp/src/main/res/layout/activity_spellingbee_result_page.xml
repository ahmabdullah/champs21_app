<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spellingbee_result_bg">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLeaderBoard"
        android:layout_marginTop="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="bottom"
                    android:background="@drawable/spellingbee_result_play_bee1"
                    android:id="@+id/linearLayout6"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/linearLayout8"
                    android:layout_alignStart="@+id/linearLayout8">

                    <LinearLayout
                        android:id="@+id/txtHolderScore"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="108dp"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/spellingbee_result_play_txtholder_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:id="@+id/txtScore" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btnShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/spellingbee_resultpage_btn_share"
                    android:layout_gravity="bottom" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:background="@drawable/spellingbee_result_play_bee2"
                    android:layout_below="@+id/linearLayout6"
                    android:layout_alignLeft="@+id/linearLayout6"
                    android:layout_alignStart="@+id/linearLayout6"
                    android:layout_marginTop="20dp"
                    android:id="@+id/linearLayout7">

                    <LinearLayout
                        android:id="@+id/txtHolderBestScore"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="108dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:background="@drawable/spellingbee_result_play_txtholder_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:id="@+id/txtHighScore" />

                    </LinearLayout>
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btnPlayAgain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="63dp"
                    android:src="@drawable/spellingbee_resultpage_btn_play_again"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/linearLayout7"
                android:layout_margin="10dp"
                android:id="@+id/linearLayout8">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spellingbee_result_play_txtholder_all"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/spellingbee_result_play_txtholder_large"
                        android:layout_height="match_parent"
                        android:id="@+id/linearLayout9">

                        <TextView
                            android:id="@+id/txtGivenWord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="---"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Given Word"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/linearLayout9"
                        android:layout_toStartOf="@+id/linearLayout9" />
                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/spellingbee_result_play_txtholder_all"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="You Typed"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/linearLayout10"
                        android:layout_toLeftOf="@+id/linearLayout10" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/spellingbee_result_play_txtholder_large"
                        android:layout_height="match_parent"
                        android:id="@+id/linearLayout10">

                        <TextView
                            android:id="@+id/txtTipedWord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="---"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:background="@drawable/spellingbee_result_play_txtholder_all"
                    android:layout_gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Total Time"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/linearLayout11"
                        android:layout_toLeftOf="@+id/linearLayout11" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:background="@drawable/spellingbee_result_play_txtholder_large"
                        android:layout_height="match_parent"
                        android:id="@+id/linearLayout11">

                        <TextView
                            android:id="@+id/txtTimeTaken"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="01:25:35"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/btnLeaderBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>