<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.classtune.schoolapp.viewhelpers.ResizableImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/spellingbee_strive"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="1dp">


        <ImageButton
            android:id="@+id/btnRules"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spellingbee_rules_btn" />
        <ImageButton

            android:id="@+id/btnSbPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spellingbee_play_btn" />

        <ImageButton
            android:layout_marginLeft="5dp"
            android:id="@+id/btnLeaderBoardsb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spellingbee_leaderboard" />


    </LinearLayout>





</RelativeLayout>
